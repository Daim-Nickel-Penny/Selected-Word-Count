{
  "manifest_version": 2,

  "name": "Selected Word Count",
  "short_name": "Selected Word Count",
  "description": "Select the passage and get the word count of the selected passage",
  "version": "4.0",
  "icons": {
    "128": "icon.png",
    "16": "icon.png",
    "48": "icon.png"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Word counter"
  },
  "permissions": ["activeTab", "https://ajax.googleapis.com/"]
}
